<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.internshala.connect4.Controller">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <children>
        <Pane GridPane.rowIndex="1" GridPane.rowSpan="2" />
      <Pane fx:id="insertedDiscPane" prefHeight="400.0" prefWidth="200.0" />
      <VBox style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <TextField fx:id="playerOneTextField" promptText="Player One Name">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="35.0" />
               </VBox.margin></TextField>
            <TextField fx:id="playerTwoTextFields" promptText="Player Two Name">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="10.0" />
               </VBox.margin></TextField>
            <Button fx:id="setNamesButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="298.0" text="Set Names">
               <VBox.margin>
                  <Insets bottom="5.0" left="15.0" right="15.0" top="10.0" />
               </VBox.margin></Button>
            <Label fx:id="playerOneLabel" alignment="CENTER" prefHeight="40.0" prefWidth="299.0" text="Player One" textFill="#e5dede">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="70.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="playerTwoLabel" alignment="CENTER" prefHeight="40.0" prefWidth="299.0" text="Turn" textAlignment="CENTER" textFill="#eae5e5">
               <font>
                  <Font size="28.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin></Label>
            <Region prefHeight="200.0" prefWidth="299.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
    </children>
</GridPane>
